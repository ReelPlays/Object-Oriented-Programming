<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.LoginController"
      alignment="CENTER"
      spacing="15"
      prefWidth="350"
      prefHeight="250"
      styleClass="login-root" stylesheets="@style.css">

    <Label text="Welcome Back"
           styleClass="login-title" />

    <TextField fx:id="txtUsername" promptText="Username" styleClass="text-field"/>
    <PasswordField fx:id="txtPassword" promptText="Password" styleClass="password-field"/>



    <HBox alignment="CENTER" spacing="15">
        <Button text="Login" onAction="#handleLogin" styleClass="login-btn"/>
        <Button text="Register" onAction="#handleRegister" styleClass="register-btn"/>
    </HBox>

    <Label fx:id="lblMessage" styleClass="login-message"/>
</VBox>
