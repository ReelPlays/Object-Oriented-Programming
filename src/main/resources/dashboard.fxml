<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.DashboardController"
      alignment="CENTER"
      spacing="20"
      prefHeight="400.0"
      prefWidth="600.0"
      styleClass="login-root" stylesheets="@style.css">

    <Label fx:id="lblWelcome" text="Welcome!" styleClass="login-title"/>

    <Button text="Change Password" onAction="#handleChangePassword" styleClass="login-btn"/>
</VBox>
